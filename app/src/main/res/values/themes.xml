<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Clickshop" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Clickshop.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Clickshop.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Clickshop.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="mytoast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#0B0A0A</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#BCAA0A</item>
        <item name="stSolidBackground">false</item>
        <item name="stStrokeWidth">3dp</item>
        <!--        <item name="stStrokeColor">#0DCD15</item>-->
        <!--        <item name="stIconStart">@drawable/ic_android</item>-->
        <item name="stLength">LONG</item> LONG or SHORT
        <!--        <item name="stGravity">center</item> top or center-->
        <item name="stRadius">5dp</item>
        <!--        <item name="cornerRadius">10dp</item>-->
    </style>
</resources>